@model IEnumerable<dream_carMVC.Models.Company>

@{
    ViewData["Title"] = "Company ";
}

<h1>Companies</h1>

<p>
    <a asp-action="Create">Create New Company</a>
</p>
<table class="table" width="50%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Website
            </th>
            <th>
                Phone
            </th>
            <th>
                Email
            </th>
            <th>
                Headquater
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Website)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Headquater)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
