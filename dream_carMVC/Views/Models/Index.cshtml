@model IEnumerable<dream_carMVC.Models.Model>

@{
    ViewData["Title"] = "Index";
}

<h1>Models</h1>

<p>
    <a asp-action="Create">Add Models</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Model
            </th><!--display data on website -->
            <th>
                Year
            </th><!--display data on website -->
            <th>
                Company
            </th><!--display data on website -->
            <th>
                Dealer
            </th><!--display data on website -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Model_Name)
                </td><!--link where it is pickup from-->
                <td>
                    @Html.DisplayFor(modelItem => item.Model_Year)
                </td><!--link where it is pickup from-->
                <td>
                    @Html.DisplayFor(modelItem => item.Company_Id)
                </td><!--link where it is pickup from-->
                <td>
                    @Html.DisplayFor(modelItem => item.Dealer.Dealer_Address)
                </td><!--link where it is pickup from-->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |<!--to edit data-->
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |<!--to detail data-->
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a><!--to delete data-->
                </td>
            </tr>
        }
    </tbody>
</table>
